{
	"compilerOptions": {
		"outDir": "./dist",
		"target": "es5",
		"module": "commonjs",
		"declaration": true,
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"es2015",
			"esnext",
			"dom",
			"webworker"
		],
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"downlevelIteration": true,
		"typeRoots": [
			"node_modules/@types/",
			"./typings/*.d.ts"
		]
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}